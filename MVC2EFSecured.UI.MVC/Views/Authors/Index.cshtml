@model IEnumerable<MVC2EFSecured.DATA.EF_2.Author>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (User.IsInRole("Admin"))
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.FirstName)*@
                Full Name
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>

            </th>
        </tr>
    </thead>    

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @*@Html.DisplayFor(modelItem => item.FirstName)*@
                    @Html.ActionLink(item.FirstName + " " + item.LastName, "Details", new { id = item.AuthorID })
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZipCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AuthorID }) |

                    @Html.ActionLink("Delete", "Delete", new { id = item.AuthorID })
                </td>
                }                
            </tr>
        }
    </tbody>

</table>

@section scripts{
    <script>
        $(document).ready( function () {
            $('.table').DataTable();
        });
    </script>
}
